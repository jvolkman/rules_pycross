    "linux-aarch64": "b241d94485923186240d1aa708a3eb23741bb7faf7a6dd87e372c3da8f7fa357",
    "linux-x86_64": "b95e8c2601a11e8b8451d8527e9491ef3ba15c99bc56d2901766265e360782f0",
    "macos-aarch64": "3cb50fddd9bc3a370b15b2dc99fcf53291bbf3fa869f6f143f9a9eba2c75d4a9",
    "macos-x86_64": "8d3f380c9501fd49470a3df464c9be05f5c71877c9c41a79ca58e3a78a2eb5d1",
}

